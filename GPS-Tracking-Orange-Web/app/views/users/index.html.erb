<div class="page-header">
	<h1>Users</h1>
</div>
<div class="row">
	<div class="column">
	<table class="table table-striped">
		<tbody>
			<% @users.each do |user| %>
			<tr>
				<td> <%= link_to user.email, user %> </td>
				<td> <%= form_for user, :html => {:class=>"form-inline"}  do |f| %>
				<div class="form-group">
					<%= f.select :role, User.roles.keys.map {|role| [role.titleize,role]}, {}, :class => 'form-control' %>
					<%= f.submit 'Change Role', :class => 'btn btn-primary' %>
				</div> <% end %> </td>
				<td> <%= link_to("Delete user", user_path(user), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-danger') unless user == current_user %> </td>
			</tr>
			<% end %>
		</tbody>
	</table>
	</div>
</div>

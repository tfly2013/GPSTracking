<h3>Profile</h3>
<p>Email: <%= @user.email if @user.email %></p>
<% if @user == current_user %>
<p><%= link_to 'Change Password', edit_user_registration_path, :class => 'button-p' %></p>
<% end %>
<p><%= button_to "Cancel this account", registration_path(@user), data: { confirm: "Are you sure?" }, method: :delete, :class => 'button-p' %></p>
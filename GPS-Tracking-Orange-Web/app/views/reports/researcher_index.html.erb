<div class="page-header">
	<h1>Overall Report</h1>
</div>
<div class="row">
	<h3>Statistics:</h3>
	<label class="col-sm-2">Trips Average Distance:</label>
	<div class="col-sm-10">
		<%= (distance(Segment.all)/Trip.count/1000).round(2) %> km
	</div>
</div>
<div class="row">
	<label class="col-sm-2">Trips Average Speed:</label>
	<div class="col-sm-10">
		<%= (average_speed(Segment.all) * 3.6).round(2) %> km/h
	</div>
</div>
<div class="row">
	<h3>Transportation Modes</h3>
	<div class="column">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Mode</th>
					<th>Count</th>
				</tr>
			</thead>
			<tbody>
				<% @modes.each do |mode, count| %>
				<tr>
					<td><%= mode %></td>
					<td><%= count %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
<div class="row">
	<div id="chart-container"><%= @chart.render() %></div>
</div>

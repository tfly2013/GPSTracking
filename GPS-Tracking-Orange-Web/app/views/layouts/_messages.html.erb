<br />
<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <% if name.to_s == 'notice' %>
      <%= js add_gritter(msg, :image => :success, :title => "Success", :time => 3000) %>
    <% else %>
      <%= js add_gritter(msg, :image => :error, :title => "Something Wrong", :sticky => true, :on_click => remove_gritter) %>
    <% end %>
  <% end %>
<% end %>
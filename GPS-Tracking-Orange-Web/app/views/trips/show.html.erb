<div class="map-container">
  <div id="map"></div>
</div>
<div class="row">
  <h3>For development use only:</h3>
  <% @trip.segments.each_with_index do |segment,index| %>
    <h3>Segment <%= index + 1 %> </h3>
    <div class="cloumn">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Speed</th>
            <th>Accuracy</th>
            <th>Time</th>
          </tr>
        </thead>
        <tbody>
          <% segment.locations.each do |location| %>
            <tr>
              <td><%= location.latitude %></td>
              <td><%= location.longitude %></td>
              <td><%= location.speed %></td>
              <td><%= location.accuracy %></td>
              <td><%= location.time %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
  <br />
</div>
<div id="map-control">
  <h3>Trip</h3>
  <div role="form">
    <div id="accordion"></div>
    <br />
    <button class="btn btn-primary btn-sm" onclick="saveTrip()" title="All changes to each segment will be saved.">Save Trip</button>
  </div>
</div>
<script type="text/javascript">
  var trip =<%= raw @tripJson.to_json %>;
        var tripUrl = "<%= trip_path(@trip) %>";
        $(initMap());
</script>
<h1>Trip</h1>
<div class="map-container">
  <div id="map"></div>
</div>

<br />

<table border="1">
  <thead>
    <tr>
      <th>Segment ID</th>
      <th>StartLocation</th>
      <th>EndLocation</th>
      <th>Transportation</th>
    </tr>
  </thead>
  <tbody>
    <% @trip.segments.each do |segment| %>
    <tr>
      <td><%= segment.id%></td>
      <td><%= segment.startLocation %></td>
      <td><%= segment.endLocation %></td>
      <td><%= segment.transportation %></td>
      <td><%= link_to 'Edit', edit_trip_segment_path(@trip, segment), :class => 'button-p' %></td>
      <td><%= link_to 'Delete', trip_segment_path(@trip, segment), method: :delete, data: { confirm: 'Are you sure?'}, :class => 'button-p' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>

<script type="text/javascript">
var coordinates = <%= raw @coordinates.to_json %>;
$(initMap());
</script>

<%= link_to 'New', new_trip_segment_path(@trip), :class => 'button-p' %>
<%= link_to 'Back', trips_path, :class => 'button-p' %>

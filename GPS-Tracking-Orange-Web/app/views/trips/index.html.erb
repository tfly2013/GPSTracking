<h1>Trips</h1>

<table>
  <thead>
    <tr>
      <th>Trip</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td>Trip <%= @trips.index(trip) + 1 %></td>
        <td><%= link_to 'Show', trip, :class => 'button-xs' %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip), :class => 'button-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

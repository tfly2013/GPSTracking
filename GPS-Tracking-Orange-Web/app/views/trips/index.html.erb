<div class="page-header">
  <h1>Trips</h1>
</div>
<div class="row">
  <div class="column">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Trip</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @trips.each do |trip| %>
          <tr>
            <td>Trip <%= @trips.index(trip) + 1 %></td>
            <td><%= link_to 'Show', trip, :class =>  'btn btn-primary' %>
              <% if current_user.try(:admin?) %>
                <%= link_to 'Delete', trip, :method=> :delete, :data => { confirm: 'Are you sure?'}, :class => 'btn btn-danger' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
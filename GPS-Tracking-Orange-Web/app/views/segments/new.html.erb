<h1>New segment</h1>
<%= form_for([@trip, @trip.segments.build]) do |f| %>
  <p>
    <%= f.label :startLocation %><br>
    <%= f.text_field :startLocation %>
  </p>
   <p>
    <%= f.label :endLocation %><br>
    <%= f.text_field :endLocation %>
  </p>
  <p>
    <%= f.label :transportation %><br>
    <%= f.text_field :transportation %>
  </p>
  <p>
    <%= f.submit "create", class: 'button-p' %>
  </p>
<% end %>

<%= link_to 'Back', @trip, :class => 'button-p' %>